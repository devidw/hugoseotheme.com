.widget.core-breadcrumbs{width:100%;margin-bottom:calc(1rem/2);text-transform:capitalize;font-size:small}.widget.core-breadcrumbs ol{margin-left:0;margin-bottom:0}.widget.core-breadcrumbs ol li{display:inline}.widget.core-breadcrumbs ol li a{color:var(--color-body-txt-transparentize-2);text-decoration:none}.widget.core-breadcrumbs ol li+li{margin-left:calc(1rem/3)}.widget.core-breadcrumbs ol li+li::before{margin-right:calc(1rem/3);content:"/";color:var(--color-body-txt-transparentize-6);font-weight:700}